<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeregister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/blue" >

           <Button
               android:id="@+id/register_back"
         android:layout_width="27dp"
         android:layout_height="27dp"
        android:layout_centerVertical="true"
         android:background="@drawable/back"
         />   
        <TextView
            android:id="@+id/tvregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvfinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="提交"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeregister"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_shoujihao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/phone1"
            android:ems="10"
            
            android:hint="请输入手机号码" >

         
        </EditText>

        <EditText
            android:id="@+id/et_mima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/lock"
            android:ems="10"
            
            android:hint="请设置6-16位密码" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativesure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/linearuser"
        android:orientation="vertical"
        android:background="@drawable/gray2" >

        <TextView
            android:id="@+id/tv_registr_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="确定信息"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearsure"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/relativesure"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativeschool"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_register_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="学校"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                android:src="@drawable/gray" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/gray" />

            <EditText
                android:id="@+id/et_register_university"
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="40dp"
                android:ems="10"
                android:hint="如：江西师范大学" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativexueyuan"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/relativeschool" >

            <TextView
                android:id="@+id/tvxueyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="学院"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"
                android:src="@drawable/gray" />

            <EditText
                android:id="@+id/et_register_academe"
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="42dp"
                android:ems="10"
                android:hint="如：软件学院"  />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativetime"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/relativexueyuan" >

            <TextView
                android:id="@+id/tvtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="入学时间"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"
                android:src="@drawable/gray" />

            <EditText
                android:id="@+id/et_register_schoolDate"
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/tvtime"
                android:ems="10" 
                android:hint="如：14年" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativexueli"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/relativetime" >

            <TextView
                android:id="@+id/tvxueli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="学历"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"
                android:src="@drawable/gray" />

            <EditText
                android:id="@+id/et_register_xueli"
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="38dp"
                android:ems="10" 
                android:hint="如：本科" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearnothing"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/linearsure"
        android:orientation="vertical" 
        android:background="@drawable/gray2" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativelogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearnothing" >

        <TextView
            android:id="@+id/tvhave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="96dp"
            android:text="已有账号，" />

        <TextView
            android:id="@+id/tvclick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/tvhave"
            android:layout_toRightOf="@+id/tvhave"
            android:text="点击登录>>"
            android:textColor="#3399CC" />
    </RelativeLayout>

</RelativeLayout>