<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/ralativefoundback"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/blue"
        android:orientation="vertical" >
           <Button
               android:id="@+id/findback_back"
         android:layout_width="27dp"
         android:layout_height="27dp"
        android:layout_centerVertical="true"
         android:background="@drawable/back"
         />   
        <TextView
            android:id="@+id/tvfoundback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="重置密码"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearphone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/relativefoundback" >

        <TextView
            android:id="@+id/tvphonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="手机注册"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/gray" />

        <TextView
            android:id="@+id/tvyouxiangnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="邮箱注册"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineartextphone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/linearphone"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/gray" />

        <TextView
            android:id="@+id/tvinputmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="请输入注册的信息"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearuserphone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/lineartextphone"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/phone"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearyanzhengma"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/linearuserphone" >

        <TextView
            android:id="@+id/tvyanzhengma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="验证码" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvgetyanzhengma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#3399CC"
            android:text="获取验证码" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearpassword"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/linearyanzhengma"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/etpasswordagain"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/password1"
            android:ems="10"
            android:hint="请设置6-16位密码" />

        <EditText
            android:id="@+id/etsetpasswordagain"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/password"
            android:ems="10"
            android:hint="请确定新密码" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativefinish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnfinish"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape"
            android:text="完成" />

    </RelativeLayout>

</LinearLayout>